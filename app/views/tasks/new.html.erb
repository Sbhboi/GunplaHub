<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :completed_at %>
    <%= form.date_field :completed_at %>
  </div>

  <%= form.submit 'Create Task' %>
<% end %>