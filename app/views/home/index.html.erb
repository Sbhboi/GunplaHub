<h1>Home Title GunplaHub</h1>
<p>this is the root page</p>
<hr>
<% if user_signed_in? %>
  <%= form_for(Post.new, url: posts_path) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'Enter your post title' %>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content, placeholder: 'Enter your post content' %>
    <br>
    <%= f.submit 'Create Post' %>
  <% end %>
<% end %>
<hr>
<% if user_signed_in? %>
  <%= form_tag destroy_user_session_path, method: :delete do %>
    <%= submit_tag 'Sign Out' %>
  <% end %>
<% else %>
  <%= link_to 'Register', new_user_registration_path %>
  <%= link_to 'Login', new_user_session_path %>
<% end %>
